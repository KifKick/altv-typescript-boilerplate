{
	"name": "altv-typescript-boilerplate",
	"version": "1.0.0",
	"description": "altv typescript boilerplate with TypeORM",
	"main": "index.js",
	"scripts": {
		"build": "npm run build:server && npm run build:client",
		"watch:server": "rollup --watch --config resources/boilerplate/source/server/rollup.config.ts",
		"build:server": "rollup --config resources/boilerplate/source/server/rollup.config.ts",
		"watch:client": "rollup --watch --config resources/boilerplate/source/client/rollup.config.ts",
		"build:client": "rollup --config resources/boilerplate/source/client/rollup.config.ts",
		"updateDeps": "npx npm-check-updates -u"
	},
	"author": "KifKick",
	"license": "UNLICENSED",
	"dependencies": {
		"chalk": "^4.1.0",
		"fs-extra": "^9.0.1",
		"mysql": "^2.18.1",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.26"
	},
	"devDependencies": {
		"@altv/types-client": "^1.1.1",
		"@altv/types-natives": "^1.1.0",
		"@altv/types-server": "^1.4.4",
		"@altv/types-webview": "^1.0.2",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@types/fs-extra": "^9.0.1",
		"@types/lodash": "^4.14.161",
		"@types/node": "^14.11.2",
		"@typescript-eslint/eslint-plugin": "4.2.0",
		"@typescript-eslint/eslint-plugin-tslint": "4.2.0",
		"@typescript-eslint/parser": "4.2.0",
		"builtin-modules": "3.1.0",
		"eslint": "7.9.0",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-import-resolver-typescript": "2.3.0",
		"eslint-plugin-import": "2.22.0",
		"lodash": "^4.17.20",
		"rollup": "^2.28.1",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-eslint": "^7.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.27.2",
		"typescript": "^4.0.3"
	}
}