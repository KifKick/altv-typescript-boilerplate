{
	"name": "altv-typescript-boilerplate",
	"version": "1.0.0",
	"description": "altv typescript boilerplate with TypeORM",
	"main": "index.js",
	"scripts": {
		"build": "npm run build:server && npm run build:client",
		"watch:server": "rollup --watch --config resources/boilerplate/source/server/rollup.config.ts",
		"build:server": "rollup --config resources/boilerplate/source/server/rollup.config.ts",
		"watch:client": "rollup --watch --config resources/boilerplate/source/client/rollup.config.ts",
		"build:client": "rollup --config resources/boilerplate/source/client/rollup.config.ts",
		"updateDeps": "npx npm-check-updates -u"
	},
	"author": "KifKick",
	"license": "UNLICENSED",
	"dependencies": {
		"chalk": "^4.1.0",
		"fs-extra": "^9.0.1",
		"mysql": "^2.18.1",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.25"
	},
	"devDependencies": {
		"@altv/native-types": "^1.0.3",
		"@altv/types": "^1.0.22",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^8.1.0",
		"@types/fs-extra": "^9.0.1",
		"@types/lodash": "^4.14.157",
		"@types/node": "^14.0.22",
		"@typescript-eslint/eslint-plugin": "2.34.0",
		"@typescript-eslint/eslint-plugin-tslint": "3.3.0",
		"@typescript-eslint/parser": "2.34.0",
		"builtin-modules": "3.1.0",
		"eslint": "6.8.0",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-import-resolver-typescript": "2.0.0",
		"eslint-plugin-import": "2.21.2",
		"lodash": "^4.17.19",
		"rollup": "^2.21.0",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-eslint": "^7.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-terser": "^6.1.0",
		"rollup-plugin-typescript2": "^0.27.1",
		"typescript": "^3.9.6"
	}
}